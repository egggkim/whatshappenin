

<!-- div to display avatar picture -->
<div class='col-md-4'>
  <%= image_tag @user.image.url(:full) %>
</div>

<div class='col-md-4'>
<h1>Edit your profile</h1>
<!-- needs to be centered on page -->
  <%= bootstrap_form_for @user do |f| %>

    <%= f.text_field :name, label: "Name:" %>
    <%= f.email_field :email, label: "Email:" %>
    <%= f.password_field :password, label: "Change password:" %>

    <br>
    <%= f.text_field :city, label: "Your city:" %>
    <%= f.file_field :image %>
    <%= f.submit "Update my information" %>
  <% end %>

  <%= link_to "Cancel", users_path(@user)  %>
</div>